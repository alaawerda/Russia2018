{% extends 'base.html.twig' %}

{% block body %}
    <h1>Matche</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matche.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if matche.date %}{{ matche.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ matche.etat }}</td>
            </tr>
            <tr>
                <th>Phase</th>
                <td>{{ matche.phase }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('matche_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('matche_edit', { 'id': matche.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
