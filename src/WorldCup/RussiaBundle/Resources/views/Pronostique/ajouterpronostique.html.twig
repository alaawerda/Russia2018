{% extends 'WorldCupRussiaBundle::base.html.twig' %}

{% block content %}

    <form method ="POST">
<table class="table table-hover">
    <thead>
    <tr>
        <th style="text-align: center" width="30%" >Equipe 1</th>
        <th style="text-align: center">Score</th>
        <th  style="text-align: center" width="30%">Equipe 2</th>
        <th style="text-align: center" width="30%">Statistique</th>
    </tr>
    </thead>

    {% for fd in feuildetail %}
    <tr>
        <td style="text-align: center"> {{ fd.matche.equipeA }} </td>
        <td style="text-align: center"><input type="radio" name="{{ fd.matche.id }}" value="1" id='iquipe1' checked> <input type="radio" name="{{ fd.matche.id }}" value="0" id='iquipe0'> <input type="radio" name="{{ fd.matche.id }}" value="2" id='iquipe2'></td>
        <td style="text-align: center"> {{ fd.matche.equipeB }} </td>
        <th >{% if fd.Total > 0 %}
            <div style="width:{{ fd.votea *100/ fd.Total }}%; float: left; padding: 4px 0 px 2 px 0 px;font-size: 11px; font-weight: normal; background-color: green">1</div>
            <div style="width:{{ fd.voteab *100/ fd.Total }}%; float: left; padding: 4px 0 2 px 0;font-size: 11px; font-weight: normal; background-color:orange">0</div>
            <div style="width:{{ fd.voteb *100/ fd.Total }}%; float: left; padding: 4px 0 2 px 0;font-size: 11px; font-weight: normal; background-color: red">2</div>
            {% endif %}
        </th>
    </tr>
    {% endfor %}


</table>
        <center><input type="submit" value="Ajouter" class="btn btn-success"/></center>
    </form>
{% endblock %}